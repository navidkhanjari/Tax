@model List<ServiceDTO>
@{
    ViewData["Title"] = "لیست خدمات ها";
    ViewData["selected"] = "Services_Index";
}

<a href="/Admin/Services/Create" class="btn btn-success mb-2"> افزودن خدمات جدید <i class="bx bx-plus"></i></a>

<section>
    <div class="card">
        <div class="table-responsive">
            <div class="dataTables_wrapper no-footer">
                <table class="table mb-0 table-striped table-hover no-footer">
                    <thead class="thead-dark">
                        <tr role="row">
                            <th>آیکن</th>
                            <th>عنوان</th>
                            <th>توضیحات</th>
                            <th>نمایش در سایت</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            @foreach (var Service in Model)
                            {
                                <tr role="row" class="odd">
                                    <td class="text-bold-700">
                                        <img class="rounded-circle mr-1" src="@FilePath.ServiceImagePath@Service.IconName" height="70" width="70">
                                    </td>
                                    <td>@Service.Title</td>
                                    <td>@Service.Description</td>
                                    @if (Service.Visible)
                                    {
                                        <td><i class='bx bx-checkbox-checked text-success'></i></td>
                                    }
                                    else
                                    {
                                        <td><i class='bx bxs-x-square text-danger'></i></td>
                                    }
                                    <td>
                                        <a title="ویرایش" href="/Admin/Services/Update/@Service.Id"><i class="bx bxs-edit-alt text-warning"></i></a>
                                        <a title="جزییات" href="/Admin/Services/Detail/@Service.Id"><i class="bx bx-detail text-secondary"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">موردی برای نمایش وجود ندارد</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>