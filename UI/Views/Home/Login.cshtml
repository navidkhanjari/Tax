@model LoginUserDTO
@{
	ViewData["Title"] = "ورود به سایت";
}
@section MetaTags{
	<meta name="robots" content="noindex, nofollow" />
}
<div class="container d-flex align-content-center justify-content-center pt-2 mt-5">
	<div class="card shadow radius15 login p-3 ">
		<div class="tab-content" id="pills-tabContent p-3">
			<div class="tab-pane fade show active p-4 text-right" id="pills-login" role="tabpanel" aria-labelledby="pills-login-tab">
				<p class="mb-3">ورود به سایت !</p>
				<form method="post">
					<div class="form-group ">
						<input type="text" asp-for="UserName" class="form-control" required placeholder="نام کاربری">
						<span asp-validation-for="UserName" class="text-danger"></span>
					</div>
					<div class="form-group mb-2">
						<input asp-for="Password" class="form-control" required placeholder="کلمه عبور">
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<button type="submit" class="btn py-3 btn-block text-white btn-success radius10 my-4">ورود<i class="fal fa-angle-left mr-2"></i></button>
				</form>
			</div>
		</div>
	</div>
</div>