@model List<CommentsDTO>

@if (Model != null)
{
    <h3 class="bt-center text-center IRANSans_Bold mb-4">نظرات مشتریان</h3>

    <section class="container mb-5">
        <div class="row">
            <div class="col-lg-12">
                <div id="owl-customershoz" class="owl-carousel owl-theme d1customer text-right">
                    @foreach (var Comment in Model)
                    {
                        <div class="d-flex flex-row">
                            @if (Comment.CustomerImageName != null)
                            {
                                <div>
                                    <img src="@FilePath.CommentImagePath@Comment.CustomerImageName" />
                                </div>
                            }
                            <div class="mt-3">
                                <h3 class="mb-2">@Comment.CustomerFullName</h3>
                                <p>@Comment.Text</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
}
